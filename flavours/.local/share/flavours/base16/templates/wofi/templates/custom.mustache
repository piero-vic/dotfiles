/* {{scheme-name}} scheme by {{scheme-author}} */

window {
  font-family: JetBrainsMonoNerdFont;
  font-size: 11px;
  font-weight: 600;
  border: 2px solid #{{base01-hex}};
  background-color: #{{base00-hex}};
  color: #{{base05-hex}};
}

#input {
  margin: 5px;
  border: none;
  border-radius: 0;
  color: #{{base04-hex}};
  background-color: #{{base01-hex}};
  border-color: #{{base02-hex}}; 
}

#inner-box {
  margin: 5px;
  border: none;
}

#outer-box {
  margin: 5px;
  border: none;
}

#entry:selected {
  background-color: #{{base02-hex}};
}
