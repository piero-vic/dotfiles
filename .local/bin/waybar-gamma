#!/usr/bin/env bash

# Requirements:
# mako https://github.com/emersion/mako
# wlsunset https://sr.ht/~kennylevinsen/wlsunset/

output_off="{\"text\": \"<span color='#c5c9c5'>󰹏</span>\", \"tooltip\": \"Day/Night Gamma: Off\", \"alt\": \"\", \"class\": \"\" }"
output_on="{\"text\": \"<span color='#e6c384'>󱩌</span>\", \"tooltip\": \"Day/Night Gamma: On\", \"alt\": \"\", \"class\": \"\" }"

if pidof wlsunset >/dev/null 2>&1; then
	if [[ "$1" == "toggle" ]]; then
		kill -9 "$(pidof wlsunset)"
		notify-send -t 1000 'Day/Night Gamma' "Turning Off"

		echo -n "$output_off"
		exit 0
	fi

	echo -n "$output_on"
	exit 0
else
	if [[ "$1" == "toggle" ]]; then
		wlsunset -l -12 -L -77 >/dev/null 2>&1 &
		notify-send -t 1000 'Day/Night Gamma' "Turning On"

		echo -n "$output_on"
		exit 0
	fi

	echo -n "$output_off"
	exit 0
fi
