#!/usr/bin/env bash

# Requirements:
# brightnessctl https://github.com/Hummer12007/brightnessctl
# mako https://github.com/emersion/mako

device="${2:-intel_backlight}"

notify() {
	title="Brightness"
	if [[ $device != "intel_backlight" ]]; then
		title="Brightness: $device"
	fi

	notify-send "$title" "ó°ƒ   Current level: $1%" --app-name "brightness" --hint "int:value:$1"
}

inc_brightness() {
	notify "$(brightnessctl -d "$device" set +5% | sed -En 's/.*\(([0-9]+)%\).*/\1/p')"
}

dec_brightness() {
	notify "$(brightnessctl -d "$device" set 5%- | sed -En 's/.*\(([0-9]+)%\).*/\1/p')"
}

show_help() {
	cat <<EOF
Usage: brightness.sh [options] [device]
AVAILABLE OPTIONS:
  --inc         increase brightness by +5%
  --dec         decrease brightness by -5%
EOF
}

if [[ "$1" == "--inc" ]]; then
	inc_brightness
elif [[ "$1" == "--dec" ]]; then
	dec_brightness
else
	show_help
fi
