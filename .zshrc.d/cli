# ALIASES

# Smart ls alias
alias l='ls -lhG'
alias la='ls -lAhG'

# Easier navigation
alias ..='cd ..'
alias ...='cd ../..'

# Reload shell
alias reload="source ~/.zshrc"

# Date
alias nowtime='date +"%T"'
alias nowdate='date +"%d-%m-%Y"'
alias now='date +"%d-%m-%Y %T"'

# FUNCTIONS

# Create directory and navigate to it
mkcd()
{
    mkdir -p -- "$1" && cd -P -- "$1"
}
